<Page
    x:Class="ClassManager.Views.ActivityPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ClassManager.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:usercontrols="using:ClassManager.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:data="using:ClassManager.Models"
    mc:Ignorable="d">

    <Page.Resources>

        <DataTemplate x:Key="ActivityItemsTemplate"
                      x:DataType="data:Activity">
            <usercontrols:ActivityItemTemplate />
        </DataTemplate>
        
    </Page.Resources>
    
    <Grid Background="Transparent">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        
        <!--<controls:AdaptiveGridView x:Name="ActivityAdaptiveGridView"
                                   ItemsSource="{x:Bind vm.Activities, Mode=OneWay}"
                                   ItemTemplate="{StaticResource ActivityItemsTemplate}"
                                   StretchContentForSingleRow="False"
                                   Grid.Column="0" Grid.Row="0"
                                   DesiredWidth="200" 
                                   Margin="30">
            
        </controls:AdaptiveGridView>-->
        <GridView x:Name="ActivityGridView"
                  ItemsSource="{x:Bind vm.Activities, Mode=OneWay}"
                  ItemTemplate="{StaticResource ActivityItemsTemplate}"
                  IsItemClickEnabled="True"
                  SelectionMode="None"
                  Margin="8">
        </GridView>
    </Grid>
</Page>
